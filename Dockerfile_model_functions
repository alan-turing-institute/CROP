FROM mcr.microsoft.com/azure-functions/python:3.0-python3.8

ENV AzureWebJobsScriptRoot=/home/site/wwwroot \
    AzureFunctionsJobHost__Logging__Console__IsEnabled=true

# Install essential packages
RUN apt-get update \
    && apt-get install -y \
        build-essential \
        cmake \
        git \
        wget \
        unzip

# Install requirements
RUN pip install --upgrade pip
COPY requirements.txt /
RUN pip install -r /requirements.txt

# Copy python code to image
COPY core /home/site/wwwroot/core
COPY setup.py /home/site/wwwroot/setup.py
COPY requirements.txt /home/site/wwwroot/requirements.txt
RUN cd /home/site/wwwroot; pip install .; cd -;
COPY models/host.json /home/site/wwwroot/host.json

COPY models/ges/ges_func /home/site/wwwroot/ges_func
COPY models/ges/ges /home/site/wwwroot/ges
COPY models/ges/GESCalibrationV1.py /home/site/wwwroot/GESCalibrationV1.py
COPY models/ges/pipelineV1_1.py /home/site/wwwroot/pipelineV1_1.py
COPY models/ges/config.ini /home/site/wwwroot/config.ini
COPY models/ges/inversion /home/site/wwwroot/inversion

COPY models/arima_python/arima_func /home/site/wwwroot/arima_func
COPY models/arima_python/arima /home/site/wwwroot/arima
COPY models/arima_python/run_pipeline.py /home/site/wwwroot/run_pipeline.py
COPY models/arima_python/config.ini /home/site/wwwroot/config.ini
